<% layout('layouts/boilerplate')%>


<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <% if (err.statusCode === 404) { %>
                    <i class="bi bi-exclamation-triangle display-1 text-primary"></i>
                    <h1 class="display-1"><%= err.statusCode %></h1>
                    <h1 class="mb-4"><%= err.message %></h1>
                    <p class="mb-4">Weâ€™re sorry, the page you have looked for does not exist in our website! Maybe go to our home page or try to use a search?</p>
                    <a class="btn btn-primary rounded-pill py-3 px-5" href="/">Go Back To Home</a>
                <% } else { %>
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading"><%= err.message %></h4>
                        <% if (process.env.NODE_ENV !== "production") { %>
                            <p><%= err.stack %></p>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>




